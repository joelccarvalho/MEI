extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-left Students List (DAW2020)
      if list.length > 0
        .w3-container 
          a(href='/addNewStudent') 
            button.w3-button.w3-green(type="button", style="width:100%") + Add
          table.w3-table-all
            tr 
              th Avatar
              th Number
              th Name
              th Git
              th Actions
            each s in list
              tr
                td
                  img.w3-left.w3-circle.w3-margin-right.image(src='https://picsum.photos/id/' + s.randomId + '/70')
                td
                  a(href='/students/' + s.numero) #{s.numero} 
                td
                  a(href='/students/' + s.numero) #{s.nome} 
                td 
                  a(href='/students/' + s.numero) #{s.git} 
                td 
                  a(href='/students/edit/' + s.numero) 
                    button.w3-button.w3-circle.w3-khaki(type="button") Edit
                  form(action="/students/delete/" + s.numero + "?_method=DELETE", method='POST')  
                    button.w3-button.w3-circle.w3-red(type='submit', value='Submit') Delete
      else
        .w3-container
          p There are no students...
      footer.w3-container.w3-teal
        address Gerado por dawApp :: 2020-Nov, Joel Carvalho

  
